Example:-
#include<iostream>
using namespace std;
class A 
{
    int a;
    int b;
    public:
    void input()
    {
        cout<<"Enter the number:"<<endl;
        cin>>a>>b;
        
    }
    friend class B;
};
class B 
{
    int c;
    public:
    void add(A obj)
    {
        c=obj.a+obj.b;
        cout<<"SUM= " << c << endl;
    }
};
int main()
{
    A obj1;
    B obj2;
    obj1.input();
    obj2.add(obj1);
    return 0;
}
